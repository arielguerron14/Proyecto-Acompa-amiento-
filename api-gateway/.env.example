# JWT Secrets (MUST be set in production; dev defaults are used if not set)
JWT_SECRET=dev-jwt-secret
REFRESH_SECRET=dev-refresh-secret

# Token Expiry Times
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Node Environment
NODE_ENV=development

# Port
PORT=8080

# Logging
LOG_LEVEL=info

# Gateway Configuration
STUDENTS_SERVICE_URL=http://localhost:5002
TEACHERS_SERVICE_URL=http://localhost:5001
REPORTS_STUDENTS_SERVICE_URL=http://localhost:5003
REPORTS_TEACHERS_SERVICE_URL=http://localhost:5004
NOTIFICATIONS_SERVICE_URL=http://localhost:5500
AUTH_SERVICE_URL=http://localhost:5005
