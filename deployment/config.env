# Deployment Configuration
# This file contains environment and deployment settings

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Environment Settings
DEV_ENVIRONMENT=dev
STAGING_ENVIRONMENT=staging
PROD_ENVIRONMENT=prod

# Instance Tags and Docker Images
BASTION_INSTANCE=EC2-Bastion
BASTION_IMAGE=bastion-host:latest

API_GATEWAY_INSTANCE=EC2-API-Gateway
API_GATEWAY_IMAGE=api-gateway:latest
API_GATEWAY_PORT=8080

CORE_INSTANCE=EC2-CORE
CORE_IMAGES=(
    "micro-auth:latest"
    "micro-estudiantes:latest"
    "micro-maestros:latest"
    "micro-core:latest"
)
CORE_PORTS=(3001 3002 3003 3004)

REPORTES_INSTANCE=EC2-Reportes
REPORTES_IMAGES=(
    "micro-reportes-estudiantes:latest"
    "micro-reportes-maestros:latest"
)
REPORTES_PORTS=(4001 4002)

NOTIFICACIONES_INSTANCE=EC2-Notificaciones
NOTIFICACIONES_IMAGE=micro-notificaciones:latest
NOTIFICACIONES_PORT=5000

MESSAGING_INSTANCE=EC2-Messaging
MESSAGING_IMAGES=(
    "proyecto-zookeeper:1.0"
    "proyecto-kafka:1.0"
    "proyecto-rabbitmq:1.0"
)
MESSAGING_PORTS=(2181 9092 5672)

DB_INSTANCE=EC2-DB
DB_IMAGES=(
    "mongo:latest"
    "postgres:latest"
    "redis:latest"
)
DB_PORTS=(27017 5432 6379)
DB_VOLUMES=(
    "mongo_data"
    "postgres_data"
    "redis_data"
)

ANALYTICS_INSTANCE=EC2-Analytics
ANALYTICS_IMAGE=micro-analytics:latest
ANALYTICS_PORT=6000

MONITORING_INSTANCE=EC2-Monitoring
MONITORING_IMAGES=(
    "proyecto-prometheus:1.0"
    "proyecto-grafana:1.0"
)
MONITORING_PORTS=(9090 3000)
MONITORING_VOLUMES=(
    "prometheus_data"
    "grafana_data"
)

FRONTEND_INSTANCE=EC2-Frontend
FRONTEND_IMAGE=frontend-web:latest
FRONTEND_PORTS=(80 443)

# Deployment Settings
RESTART_POLICY=always
HEALTH_CHECK_TIMEOUT=30
DEPLOY_LOG_DIR=./deployment/logs

# Slack Notifications (Set in GitHub Secrets)
# SLACK_WEBHOOK_URL is stored in GitHub Secrets
