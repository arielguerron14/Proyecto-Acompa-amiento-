{
  "name": "proyecto-acompanamiento",
  "version": "1.0.0",
  "description": "Sistema de Acompa√±amiento Educativo - Microservicios (Monorepo Turborepo)",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:infrastructure": "node scripts/build-infrastructure.js",
    "validate:infrastructure": "node scripts/validate-infrastructure.js",
    "build:all": "npm run build:infrastructure && docker-compose build",
    "rebuild:services": "npm run build:infrastructure && docker-compose up -d --build",
    "dev": "turbo run dev --parallel",
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "logs": "docker-compose logs -f",
    "ps": "docker-compose ps",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "turbo": "turbo",
    "cqrs:generate": "node scripts/generate-cqrs.js",
    "cqrs:regenerate": "node scripts/generate-cqrs.js --force",
    "cqrs:validate": "node scripts/validate-cqrs.js",
    "workflow:update-ips": "gh workflow run update-ips.yml -f environment=local",
    "workflow:auto-fix": "gh workflow run auto-fix-endpoints.yml",
    "workflow:maintain-cqrs": "gh workflow run maintain-cqrs.yml"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.2.1",
    "mongoose": "^9.0.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "turbo": "^2.7.5"
  },
  "packageManager": "npm@10.9.2"
}
