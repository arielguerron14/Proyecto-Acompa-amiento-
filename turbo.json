{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/package.json",
    "**/.env",
    "**/.env.local"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": true,
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.test.*",
        "src/**/*.spec.*",
        "tests/**/*",
        "jest.config.js",
        "vitest.config.ts"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "docker:build": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "clean": {
      "cache": false
    }
  }
}
