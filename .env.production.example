# Copy to `.env.production` and edit secrets before deploying

# Frontend
FRONTEND_URL=http://172.31.64.83
FRONTEND_PORT=80

# API Gateway
API_GATEWAY_HOST=172.31.65.190
API_GATEWAY_PORT=8080
API_GATEWAY_URL=http://172.31.65.190:8080

# Services (Micro Core)
AUTH_SERVICE_URL=http://172.31.77.203:5005
